<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nextPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="9. Bike computer successfully \n    gained GPS signal (icon is 100%)"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <CheckBox
        android:id="@+id/HRVPairedCheck"
        android:layout_width="38dp"
        android:layout_height="44dp"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="@+id/bikeComputerModeCheck"
        app:layout_constraintStart_toStartOf="@+id/bikeComputerModeCheck"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="8. Heart rate monitor successfully\n    paired with bike computer"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="2. Attached watch and recording \n    through Empatica app"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/participantID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:text="Participant ID:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="6. Bike computer attached"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="3. Attached heart rate monitor \n    to chest"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/incident_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="IncidentRecordingPage"
        android:text="Incidents"
        app:iconTint="#FF0000"
        app:layout_constraintBottom_toBottomOf="@+id/next_page"
        app:layout_constraintHorizontal_bias="0.781"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/next_page"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/goProForwardCheck"
        android:layout_width="38dp"
        android:layout_height="44dp"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="@+id/goProFaceCheck"
        app:layout_constraintStart_toStartOf="@+id/goProFaceCheck"
        app:layout_constraintTop_toTopOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.318" />

    <EditText
        android:id="@+id/IDinput"
        android:layout_width="97dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="e.g Ben"
        app:layout_constraintBottom_toBottomOf="@+id/participantID"
        app:layout_constraintStart_toEndOf="@+id/participantID"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="5. Attached forward facing GoPro"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:text="7. Bike computer set to outdoor \n    cycling mode"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/gopro_help_1"
        android:layout_width="39dp"
        android:layout_height="37dp"
        android:fontFamily="cursive"

        android:onClick="goProAttachHelp"
        android:text="i"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"

        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/HRV_help"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/emaptica_baseline_help"
        android:layout_width="39dp"
        android:layout_height="37dp"
        android:fontFamily="cursive"
        android:onClick="openEmpaticaBaselineHelp"
        android:text="i"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/textView12"
        app:layout_constraintStart_toStartOf="@+id/emaptica_help"
        app:layout_constraintTop_toTopOf="@+id/textView12"
        app:layout_constraintVertical_bias="0.3"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/gopro_2_help"
        android:layout_width="39dp"
        android:layout_height="37dp"

        android:fontFamily="cursive"
        android:onClick="goproforwardHelp"
        android:text="i"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"

        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/gopro_help_1"
        app:layout_constraintTop_toTopOf="@+id/textView7"
        tools:ignore="TouchTargetSizeCheck" />

    <CheckBox
        android:id="@+id/heartRateCheck"
        android:layout_width="38dp"
        android:layout_height="44dp"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/empaticaCheck"
        app:layout_constraintStart_toStartOf="@+id/empaticaCheck"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.318" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="1. Attached microphone to lapel\nand started recording"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="261dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:text="Performed baseline readings\nfor 5 minutes"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/IDinput" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="4. Attached face angled GoPro"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <CheckBox
        android:id="@+id/GPSSignalCheck"
        android:layout_width="38dp"
        android:layout_height="44dp"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView13"
        app:layout_constraintEnd_toEndOf="@+id/HRVPairedCheck"
        app:layout_constraintStart_toStartOf="@+id/HRVPairedCheck"
        app:layout_constraintTop_toTopOf="@+id/textView13"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/bikeComputerModeCheck"
        android:layout_width="38dp"
        android:layout_height="44dp"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="@+id/GPSCheck"
        app:layout_constraintStart_toStartOf="@+id/GPSCheck"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/HRV_help"
        android:layout_width="39dp"
        android:layout_height="37dp"
        android:layout_marginEnd="17dp"
        android:fontFamily="cursive"
        android:onClick="HRV_attach_help"
        android:text="i"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/heartRateCheck"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TouchTargetSizeCheck" />

    <CheckBox
        android:id="@+id/GPSCheck"
        android:layout_width="38dp"
        android:layout_height="44dp"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/goProForwardCheck"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.181" />

    <CheckBox
        android:id="@+id/goProFaceCheck"
        android:layout_width="38dp"
        android:layout_height="44dp"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="@+id/heartRateCheck"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/heartRateCheck"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.363" />

    <Button
        android:id="@+id/next_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:onClick="main_page_2"
        android:text="Next"
        android:theme="@style/Button.Red"
        app:iconTint="#FF0000"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <CheckBox
        android:id="@+id/lapelMicCheck"
        android:layout_width="38dp"
        android:layout_height="44dp"
        android:layout_marginEnd="5dp"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <CheckBox
        android:id="@+id/baselineCheck"
        android:layout_width="38dp"
        android:layout_height="44dp"
        android:layout_marginEnd="5dp"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/emaptica_baseline_help"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/lapelMicCheck"
        app:layout_constraintTop_toTopOf="@+id/emaptica_baseline_help"
        app:layout_constraintVertical_bias="1.0" />

    <CheckBox
        android:id="@+id/empaticaCheck"
        android:layout_width="38dp"
        android:layout_height="44dp"
        android:layout_marginEnd="5dp"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/lapelMicCheck"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/ride_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:text="Current date:"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/participantID"
        app:layout_constraintStart_toEndOf="@+id/IDinput"
        app:layout_constraintTop_toTopOf="@+id/participantID"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/emaptica_help"
        android:layout_width="39dp"
        android:layout_height="37dp"
        android:fontFamily="cursive"
        android:onClick="openEmpaticaBaselineHelp"
        android:text="i"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/HRV_help"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.3"
        tools:ignore="TouchTargetSizeCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>

